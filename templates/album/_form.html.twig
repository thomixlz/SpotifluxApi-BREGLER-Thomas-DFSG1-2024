{{ form_start(form) }}

<div class="container pb-5 mb-5">
    <div class="row">
        <div class="col-12">
            <h3>Name</h3>
            {{ form_row(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Name'}}) }}
        </div>
        <div class="col-12">
            <h3>Choice Artist</h3>
            {{ form_row(form.artist, {'attr': {'class': 'form-control', 'placeholder': 'Artiste'}}) }}
        </div>

        <div class="col-12">
            <h3>Year</h3>
            {{ form_row(form.year, {'attr': {'class': 'form-control', 'placeholder': 'Year'}}) }}
        </div>
    </div>

    <div class="row">
        <div class="col-12 mt-2 d-flex justify-content-center">
            <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
        </div>
    </div>
</div>
{{ form_end(form) }}


<script>
    CKEDITOR.replace('album_name', {customConfig: '{{ asset("ckeditor_config.js") }}'});
</script> 

